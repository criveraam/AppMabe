<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="MY.DIALOG" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_up</item>
        <item name="android:windowExitAnimation">@anim/anim_down</item>
    </style>

    <style name="DialogAnimationDown">
        <item name="android:windowEnterAnimation">@anim/anim_down</item>
        <item name="android:windowExitAnimation">@anim/anim_up</item>
    </style>

    <style name="DialogAnimationLeft">
        <item name="android:windowEnterAnimation">@anim/anim_left</item>
        <item name="android:windowExitAnimation">@anim/anim_right</item>
    </style>

    <!-- APP TOOLBAR COLAPSE LAYOUT-->
    <style name="toolbarCollapse">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- DISEÃ‘O DEL LAYOUT-->
    <style name="layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
    </style>

    <style name="layout_separador">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="texto_h1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">#0b2844</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="texto_h2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">#1a8d93</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="texto_h3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">#16d9e0</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="texto_h4">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">#2a79d3</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="texto_h5">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">#4a90db</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="separador_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40px</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:src">@drawable/logo</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="button">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/sin_esquinas</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="encabezado">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:background">@drawable/celda_estilo1</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="celda_table">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">@drawable/encabezado</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">#ffffff</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/azulFuerte</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="celda_table_2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">@drawable/celda_estilo1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/azulFuerte</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="encabezado_producto">
        <item name="android:text">Producto</item>
        <item name="android:textColor">@color/azulFuerte</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="encabezado_iconos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="contenedor_encabezado_iconos">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
